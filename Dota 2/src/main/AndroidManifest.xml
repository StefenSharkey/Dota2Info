<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dirtypepper.dota2" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dirtypepper.dota2.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dirtypepper.dota2.RandomCaptainsModeActivity"
            android:label="@string/random_captains_mode"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.dirtypepper.dota2.MainActivity" >
        </activity>
        <activity
            android:name="com.dirtypepper.dota2.HeroActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name="com.dirtypepper.dota2.HeroListActivity"
            android:label="@string/heroes"
            android:configChanges="orientation|screenSize"
            android:parentActivityName="com.dirtypepper.dota2.MainActivity" >
        </activity>
    </application>

</manifest>
