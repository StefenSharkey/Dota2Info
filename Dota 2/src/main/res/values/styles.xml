<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextColor">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TextColor.Bold" parent="TextColor">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextColor.Italic" parent="TextColor">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ClickableView">
        <item name="android:listSelector">@drawable/custom_view</item>
    </style>

    <style name="Theme.Dotabar" parent="@style/Theme.AppCompat">
        <item name="actionBarItemBackground">@drawable/selectable_background_dotabar</item>
        <item name="popupMenuStyle">@style/PopupMenu.Dotabar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Dotabar</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Dotabar</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Dotabar</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Dotabar</item>
        <item name="actionModeBackground">@drawable/cab_background_top_dotabar</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_dotabar</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Dotabar</item>
    </style>

    <style name="ActionBar.Solid.Dotabar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_dotabar</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_dotabar</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_dotabar</item>
        <item name="progressBarStyle">@style/ProgressBar.Dotabar</item>
    </style>

    <style name="ActionBar.Transparent.Dotabar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_dotabar</item>
        <item name="progressBarStyle">@style/ProgressBar.Dotabar</item>
    </style>

    <style name="PopupMenu.Dotabar" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dotabar</item>
    </style>

    <style name="DropDownListView.Dotabar" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_dotabar</item>
    </style>

    <style name="ActionBarTabStyle.Dotabar" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_dotabar</item>
    </style>

    <style name="DropDownNav.Dotabar" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_dotabar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dotabar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_dotabar</item>
    </style>

    <style name="ProgressBar.Dotabar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_dotabar</item>
    </style>

    <style name="ActionButton.CloseMode.Dotabar" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_dotabar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Dotabar.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Dotabar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Dotabar</item>
    </style>

</resources>